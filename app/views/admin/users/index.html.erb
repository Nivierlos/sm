<h2 class="page-header"><%= @page_title %></h2>
<%= link_to 'Add New User', new_admin_user_path, class:'btn btn-success pull-right'%>
<% if @users.exists? %>
<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Department</th>
        <th>Telephone</th>
        <th>Position</th>
        <th>Created Date</th>
        <th>Action</th>
    </tr>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.department.name %></td>
            <td><%= user.phone %></td>
            <td><%= user.position %></td>
            <td><%= user.created_at.to_time.strftime('%B %e at %l : %M %p') %></td>
            <% if user == current_user%>
            <td><%= link_to 'Edit', edit_admin_user_path(user), class:'btn btn-primary'%> 
            <%= link_to 'Delete', admin_user_path(user), class:'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %></td>
            <% end %>            
        </tr>
    <% end %>
</table>
<% else %>
 <p>There are no user</p>
<% end %>
