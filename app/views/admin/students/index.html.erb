<h2><%= @page_title%></h2>
<table class="table table-striped table-bordered">

<%= link_to  "Add New", new_admin_student_path, class:'btn btn-success pull-right' %>

	<tr>
		<th>Name</th>
		<th>Registration Number</th>
		<th>Department</th>
		<th>Level</th>
		<th>Email</th>
		<th>Action</th>
	</tr>
	<% @students.each do |student|%>
	<tr>
		<td><%= student.first_name %> <%= student.last_name %></td>
		<td><%= student.reg_number %></td>
		<td><%= student.department.name %></td>
		<td><%= student.level %></td>
		<td><%= student.email %></td>
		<td><%= link_to 'More details', admin_student_path(student), class:'btn btn-info'%></td>
	</tr>
	<% end %>
</table>

