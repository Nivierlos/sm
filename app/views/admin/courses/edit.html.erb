<h2><%= @page_title%></h2>
<%= form_for [:admin, @course] do |f| %>

<% if @course.errors.any? %>
  <% @course.errors.full_messages.each do |msg| %>
   <!-- show errors -->
     <div class="alert alert-danger"><%= msg %></div>
     <% end %>
  <% end %>
	<div class="form-group">
		<%= f.label :module_code%><br/>
		<%=f.text_field :module_code, class:'form-control'%>
	</div>
	<div class="form-group">
		<%= f.label :module_name%><br/>
		<%=f.text_field :module_name, class:'form-control'%>
	</div>
    <div class="form-group">
		<%= f.label :credits%><br/>
		<%= f.number_field :credit, class:'form-control'%>
	</div>
	<div class="form-group">
		<%= f.label :department%><br/>
		<%= f.select :department_id, Department.all.collect {|x|[x.name, x.id]}, {:include_blank => 'select one'}, class:'form-control'%>
	</div>
	<div class="form-group">
		<%= f.label :level%><br/>
		<%= f.select :level, ([[1],[2],[3],[4]]),class:'form-control'%>
	</div>
    <div class="form-group">
		<%= f.label :lecturer%><br/>
		<%= f.select :user_id, User.all.collect {|x|[x.name, x.id]}, {:include_blank => 'select one'}, class:'form-control'%>
	</div>
	<%= f.submit 'Submit',class:'btn btn-success' %>
		<%= link_to 'Cancel', admin_courses_path, class:'btn btn-default'%>
<% end %>
