<% if params[:controller] == 'admin/students'%>
    <%= form_tag(admin_students_index_path, :method => "get", id:"search-form", class:'form-inline pull-right') do %>
        <div class="form-group">
            <%= text_field_tag :search, params[:search], placeholder:"Search Student", class:'form-control'%>
        </div>
        <%= submit_tag "Search", :name => nil, class:'btn btn-primary' %>
    <% end %>
<% elsif params[:controller] == 'admin/results'%>
    <%= form_tag(admin_results_show_path, :method => "get", id:"search-form", class:'form-inline pull-right') do %>
           <div class="form-group">
              <%= text_field_tag :search, params[:search], placeholder:"Search Marks", class:'form-control'%>
            </div>
            <%= submit_tag "Search", :name => nil, class:'btn btn-primary' %>
    <% end %>
<% elsif params[:controller] == 'admin/courses'%>
    <%= form_tag(admin_courses_index_path, :method => "get", id:"search-form", class:'form-inline pull-right') do %>
            <div class="form-group">
                <%= text_field_tag :search, params[:search], placeholder:"Search Module", class:'form-control'%>
            </div>
                <%= submit_tag "Search", :name => nil, class:'btn btn-primary' %>
    <% end %>
<% end %>